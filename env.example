# Version Configuration
KEYCLOAK_VERSION=latest
POSTGRES_VERSION=latest

# Keycloak Configuration
KEYCLOAK_HOSTNAME=your-domain.com
KEYCLOAK_PORT=8081
KEYCLOAK_HOSTNAME_STRICT=true
KEYCLOAK_HOSTNAME_STRICT_HTTPS=true
KEYCLOAK_COMMAND=start-dev

# Proxy Configuration (IMPORTANT for Nginx Proxy Manager)
KC_PROXY=edge
KC_PROXY_ADDRESS_FORWARDING=true

# Database Configuration
POSTGRES_DB=keycloak
POSTGRES_USER=keycloak
POSTGRES_PASSWORD=keycloak_password

# Admin Configuration (deprecated, use KC_BOOTSTRAP_* below)
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin_password

# Admin Configuration (new format)
KC_BOOTSTRAP_ADMIN_USERNAME=admin
KC_BOOTSTRAP_ADMIN_PASSWORD=admin_password

# Keycloak Features
KC_HEALTH_ENABLED=true
KC_METRICS_ENABLED=true
KC_CACHE=local
KC_LOG_LEVEL=INFO
KC_HTTP_ENABLED=true
KC_HTTP_RELATIVE_PATH=/

# Database Connection Pool
KC_DB_POOL_INITIAL_SIZE=5
KC_DB_POOL_MAX_SIZE=20

# Production Settings (uncomment and modify as needed)
# KEYCLOAK_COMMAND=start --optimized
# POSTGRES_PASSWORD=your_secure_postgres_password
# KC_BOOTSTRAP_ADMIN_PASSWORD=your_secure_admin_password 